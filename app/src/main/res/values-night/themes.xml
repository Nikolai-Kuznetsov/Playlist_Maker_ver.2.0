<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->

        <item name="colorPrimary">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="background">@color/black</item>

        <item name="navigationIconColor">@color/navigation_icon_color_night</item>

        <item name="colorSwitchTrackChecked">@color/switch_track_checked_night</item>
        <item name="colorSwitchTrackUnchecked">@color/switch_track_unchecked_night</item>
        <item name="colorSwitchThumbChecked">@color/switch_thumb_checked_night</item>
        <item name="colorSwitchThumbUnchecked">@color/switch_thumb_unchecked_night</item>
    </style>

    <style name="settingsIcon">
        <item name="tint">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_settings_padding_20dp</item>
    </style>

    <style name="search_icon_and_text">
        <item name="android:drawableStart">@drawable/little_search_dark</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textSize">@dimen/text_size_16px</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

</resources>